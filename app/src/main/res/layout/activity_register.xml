<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip">
        <EditText
            android:id="@+id/et_rname"
            android:hint="Ingrese su nombre"
            android:drawableLeft="@mipmap/ic_face_black"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText" />

        <EditText
            android:id="@+id/et_rsurname"
            android:hint="Ingrese su apellido"
            android:drawableLeft="@mipmap/ic_face_black"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText" />

        <EditText
            android:id="@+id/et_remail"
            android:hint="Correo electronico"
            android:drawableLeft="@mipmap/ic_email_black"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText" />

        <EditText
            android:id="@+id/et_ruser"
            android:hint="Elige nombre de usuario"
            android:drawableLeft="@mipmap/ic_account_circle"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText" />

        <EditText
            android:id="@+id/et_rpassword"
            android:hint="Elige contraseña"
            android:drawableLeft="@mipmap/ic_lock_black"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText"/>

        <Spinner
            android:id="@+id/s_companies"
            android:hint="Compañia"
            android:prompt="@string/company_choose"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_rgo"
            android:onClick="registerUser"
            android:text="Registrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:layout_marginTop="5dp"
            android:padding="10dp" />
    </LinearLayout>
</ScrollView>