<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Origen: "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tw_source"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Aqui va el origen"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Destino: "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tw_target"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Aqui va el destino"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Fecha: "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tw_date"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Aqui va la fecha"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Hora: "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tw_time"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Aqui va la hora"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoMenu"
            android:text="Menu"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="lockTravel"
            android:text="Aceptar" />


        <Button
            android:id="@+id/btn_nok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeTravel"
            android:text="Rechazar"/>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoExit"
            android:text="Salir"/>

    </LinearLayout>


</LinearLayout>